@model IEnumerable<WebAppHeadsBooks.Models.Library>

    @{ ViewBag.Title = "Biblioteca TRAVEL."; }
    <h2>@ViewBag.Title.</h2>

    <p>Explora los contenidos que la Biblioteca Digital que <b>Travel</b> ha seleccionado para ti.</p>

    <div class="row">
        <!-- Color Open Accordion start -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-header-text"> </h5>
                </div>
                <div class="card-block accordion-block color-accordion-block">
