                                    </div>
                                    <div class="col-md-3">
                                        <div class="col-md-10">
                                            <h5><b>Autor</b></h5>
                                            <span class="ml-4">@item.Autor </span>
                                        </div>
                                        <div class="col-md-10">
                                            <h5><b>Editorial</b></h5>
                                            <span class="ml-4"> @item.Editorial</span>
                                        </div>
                                        <div class="col-md-10">
                                            <h5><b>Páginas</b></h5>
                                            <span class="ml-4">@item.n_paginas</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <p>
                                            @item.sinopsis
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }






